<?xml version="1.0" encoding="utf-8"?>
<com.ljr.study.view.ValidLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <com.ljr.study.view.ValidLayout
        android:layout_width="600px"
        android:layout_height="700px"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <com.ljr.study.view.ValidLayout
            android:id="@+id/layout"
            android:layout_width="500px"
            android:layout_height="500px"
            android:background="@android:color/holo_blue_bright">

            <com.ljr.study.view.ValidView
                android:id="@+id/view"
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="@android:color/holo_green_dark" />
        </com.ljr.study.view.ValidLayout>
    </com.ljr.study.view.ValidLayout>

    <com.ljr.study.view.ValidView
        android:layout_width="300px"
        android:layout_height="300px"
        android:background="@android:color/holo_blue_dark" />

    <com.ljr.study.view.DropTargetView
        android:id="@+id/drag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_orange_dark" />

    <com.ljr.study.view.PathMeasureView
        android:layout_width="100dp"
        android:layout_height="100dp" />
</com.ljr.study.view.ValidLayout>
